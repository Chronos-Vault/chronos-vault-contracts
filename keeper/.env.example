# Trinity Exit-Batch Keeper Configuration

# Environment
NODE_ENV=development

# RPC Endpoints
ARBITRUM_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_WS_URL=wss://sepolia-rollup.arbitrum.io/ws
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Contract Addresses
HTLC_ARB_TO_L1_ADDRESS=0x...
TRINITY_EXIT_GATEWAY_ADDRESS=0x...

# Gnosis Safe Configuration (REQUIRED for production)
GNOSIS_SAFE_ADDRESS=0x...
GNOSIS_SAFE_API_URL=https://safe-transaction-sepolia.safe.global
KEEPER_PRIVATE_KEY=0x...

# Batching Configuration
MIN_BATCH_SIZE=50
MAX_BATCH_SIZE=200
BATCH_TIMEOUT_HOURS=6

# IPFS Storage
ENABLE_IPFS_STORAGE=true
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_API_KEY=your_ipfs_key

# Arweave Storage
ENABLE_ARWEAVE_STORAGE=false
ARWEAVE_API_URL=https://arweave.net
ARWEAVE_PRIVATE_KEY={"kty":"RSA",...}

# Monitoring
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=3001
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts

# Gas Configuration
MAX_GAS_PRICE_GWEI=50
GAS_LIMIT_BUFFER=1.2

# Feature Flags
ENABLE_AUTO_CHALLENGE=false
DEBUG=false

# Database (optional - for persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/trinity_keeper
